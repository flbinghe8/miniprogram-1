/* pages/result/result.wxss (最终修复版) */

.container {
  /* 【✅ 修复顶部重叠：增加 padding-top】 */
  padding-top:60rpx; /* 确保避开自定义头部，请根据效果微调 */
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 30rpx;
  
  min-height: 100vh;
  background-color: #f8f9fa;
}

.header {
  text-align: center;
  margin-bottom: 30rpx; /* 缩小与下方提示框的间距 */
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1c1c1e;
}

/* --- 结果页 AI 提示框样式 --- */
.result-warning-box {
  display: flex;
  align-items: center;
  justify-content: center;
  
  /* 模拟截图的红色框样式 */
  border: 2rpx solid #ff4d4f; /* 红色边框 */
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx; /* 与内容框保持间距 */
  background-color: #fff0f0; /* 淡红色背景 */
}

.warning-emoji {
  font-size: 36rpx;
  margin-right: 15rpx;
  color: #333;
}

.warning-text {
  font-size: 28rpx;
  color: #ff4d4f; /* 提示文字颜色 */
  font-weight: 500;
}

/* 【✅ 修复内容溢出：将内容框设为可滚动区域】 */
.result-box {
  height: 70vh; /* 设定一个明确的高度，让其内部可滚动 */
  max-height: 70vh; /* 限制最大高度 */
  background-color: #fff;
  border: 1px solid #eee;
  border-radius: 20rpx;
  padding: 32rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
  /* 移除之前的固定 height: 60vh，使用 scroll-view 确保内容滚动 */
}

.result-content {
  /* 确保内容能正常换行显示，而不是挤在一起 */
  font-size: 28rpx;
  line-height: 1.6;
  white-space: pre-wrap; /* 关键：保留换行符和空格 */
  word-break: break-word; /* 确保长单词也能换行 */
  color: #333;
}

.actions {
  margin-top: 40rpx;
}

/* 按钮样式保持不变 */
.button-primary {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #007aff;
  color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  border: none;
}

.button-secondary {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f0f0f0;
  color: #333;
  border-radius: 12rpx;
  border: none;
}