/* pages/premium/packages/packages.wxss - 正式版 */
.container {
  min-height: 100vh;
  background: #f5f5f7;
  padding: 0;
}

.header {
  display: flex;
  align-items: center;
  padding: 120rpx 30rpx 40rpx;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e7;
}

.back-icon {
  font-size: 52rpx;
  margin-right: 20rpx;
  line-height: 1;
  color: #0066cc;
}

.header-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.login-notice {
  background: #fff8e6;
  padding: 20rpx 30rpx;
  border-left: 8rpx solid #ffc107;
  margin: 0 30rpx 20rpx;
  border-radius: 8rpx;
}

.notice-text {
  font-size: 26rpx;
  color: #e6a700;
  font-weight: 500;
}

.packages-container {
  padding: 40rpx 30rpx;
}

.package-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  position: relative;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.06);
  border: 1rpx solid #e5e5e7;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.package-card.recommended {
  border-color: #007aff;
  box-shadow: 0 8rpx 40rpx rgba(0,122,255,0.15);
  transform: translateY(-4rpx);
}

.package-card.card-active {
  border-color: #007aff;
  background: #f8f9ff;
}

.recommend-badge {
  position: absolute;
  top: -16rpx;
  right: 30rpx;
  background: #007aff;
  color: white;
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.package-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f2f2f7;
}

.package-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.price-section {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 28rpx;
  color: #1d1d1f;
  margin-right: 4rpx;
}

.package-price {
  font-size: 44rpx;
  font-weight: 700;
  color: #1d1d1f;
}

.package-features {
  margin-bottom: 40rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.feature-icon {
  color: #007aff;
  font-size: 26rpx;
  margin-right: 16rpx;
  font-weight: 600;
}

.feature-text {
  font-size: 28rpx;
  color: #424245;
}

.buy-btn {
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  border-radius: 12rpx;
  background: #007aff;
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.buy-btn.primary {
  background: #007aff;
}

.buy-btn:active {
  background: #0056cc;
  transform: scale(0.98);
}

.footer-tips {
  padding: 40rpx 30rpx;
  text-align: center;
  background: #f5f5f7;
}

.tip-text {
  display: block;
  font-size: 24rpx;
  color: #86868b;
  margin-bottom: 12rpx;
}