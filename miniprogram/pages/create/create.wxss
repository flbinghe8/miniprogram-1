/* 自定义弹窗样式 - 方案五：简约现代风 */
.custom-dialog {
position: fixed;
top: 0;
left: 0;
width: 100%;
height: 100%;
z-index: 9999;
}

.dialog-mask {
position: absolute;
top: 0;
left: 0;
width: 100%;
height: 100%;
background: rgba(0, 0, 0, 0.5);
}

.dialog-content {
position: absolute;
top: 50%;
left: 50%;
transform: translate(-50%, -50%);
width: 80%;
max-width: 600rpx;
background: #ffffff;
border-radius: 24rpx;
padding: 50rpx 40rpx;
text-align: center;
box-sizing: border-box;
box-shadow: 0 20rpx 80rpx rgba(0, 0, 0, 0.15);
border: 1rpx solid #f0f0f0;
}

.dialog-icon {
font-size: 80rpx;
margin-bottom: 20rpx;
}

.dialog-title {
font-size: 36rpx;
font-weight: bold;
margin-bottom: 20rpx;
color: #333;
}

.dialog-desc {
font-size: 28rpx;
color: #666;
margin-bottom: 40rpx;
line-height: 1.5;
}

.phone-input {
width: 100%;
height: 80rpx;
border: 2rpx solid #e8e8e8;
border-radius: 12rpx;
padding: 0 20rpx;
margin-bottom: 40rpx;
box-sizing: border-box;
font-size: 28rpx;
background: #fafafa;
transition: all 0.3s;
}

.phone-input:focus {
border-color: #007aff;
background: white;
box-shadow: 0 0 0 2rpx rgba(0, 122, 255, 0.1);
}

.action-buttons {
display: flex;
flex-direction: column;
gap: 20rpx;
}

.confirm-btn, .cancel-btn {
height: 60rpx;
line-height: 60rpx;
border-radius: 12rpx;
font-size: rpx;
border: none;
text-align: center;
padding: 32;
font-weight: 400;
transition: all 0.2s;
}

.confirm-btn {
background: #007aff;
color: white;
box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.3);
}

.confirm-btn:active {
transform: scale(0.98);
box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.4);
