.container {
  padding: 40rpx;
  text-align: center;
}

.success-icon {
  font-size: 120rpx;
  color: #09bb07;
  margin: 60rpx 0 30rpx;
}

.success-text {
  font-size: 48rpx;
  color: #333;
  margin-bottom: 60rpx;
}

.order-info {
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
  text-align: left;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 32rpx;
}

.label {
  color: #666;
}

.value {
  color: #333;
  font-weight: bold;
}

.button-group {
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  border-radius: 12rpx;
  font-size: 32rpx;
  padding: 24rpx;
}

.secondary {
  background: #f0f0f0;
  color: #333;
}

.primary {
  background: #07c160;
  color: white;
}