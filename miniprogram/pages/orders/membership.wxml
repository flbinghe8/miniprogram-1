<!--pages/orders/membership.wxml-->
<view class="container">
  <!-- 用户信息卡片 -->
  <view class="user-card">
    <view class="user-title">途胜用户</view>
    <view class="credits-display">{{creditsDisplay}}</view>
    
    <view class="upgrade-section" bindtap="goToPremium">
      <text>升级会员 / 查看套餐</text>
    </view>
  </view>

  <!-- 功能列表 -->
  <view class="menu-list">
    <view class="menu-item" bindtap="viewHistory">
      <text class="menu-text">历史生成记录</text>
    </view>

    <view class="menu-item">
      <text class="menu-text">使用指引 / 添加到桌面</text>
    </view>

    <view class="menu-item">
      <text class="menu-text">联系客服</text>
    </view>

    <view class="menu-item logout-item" bindtap="logout">
      <text class="menu-text">退出登录</text>
    </view>
  </view>

  <view class="version">Version 1.3.0</view>
</view>