/* pages/history/history.wxss */
.container {
  background: #fbfbfd;
  min-height: 100vh;
  padding: 0;
}

/* 头部样式 */
.header {
  background: #ffffff;
  padding: 60rpx 40rpx 30rpx;
  border-bottom: 1rpx solid #e5e5e7;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #1d1d1f;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #86868b;
  font-weight: 400;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #86868b;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #86868b;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-subtext {
  font-size: 26rpx;
  color: #c2c2c7;
}

/* 滚动区域 */
.history-scroll {
  height: calc(100vh - 200rpx);
  padding: 0 30rpx;
}

.history-list {
  padding: 20rpx 0;
}

/* 历史记录项 */
.history-item {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 32rpx 28rpx; /* 调整右侧内边距 */
  display: flex;
  align-items: flex-start;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #f0f0f0;
  transition: all 0.2s ease;
}

.history-item:active {
  background: #f8f8f8;
  transform: scale(0.995);
}

/* 左侧图标 */
.item-left {
  margin-right: 24rpx;
}

.type-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
}

.type-icon.sop {
  background: rgba(0, 122, 255, 0.1);
}

.type-icon.title {
  background: rgba(52, 199, 89, 0.1);
}

.type-icon.ads {
  background: rgba(255, 149, 0, 0.1);
}

.type-icon:not(.sop):not(.title):not(.ads) {
  background: rgba(142, 142, 147, 0.1);
}

.icon-text {
  font-size: 24rpx;
  color: #007aff;
}

.type-icon.sop .icon-text {
  color: #007aff;
}

.type-icon.title .icon-text {
  color: #34c759;
}

.type-icon.ads .icon-text {
  color: #ff9500;
}

/* 中间内容 */
.item-content {
  flex: 1;
  min-width: 0;
  margin-right: 20rpx; /* 增加与右侧按钮的间距 */
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.workflow-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  flex: 1;
  margin-right: 20rpx;
}

.time {
  font-size: 24rpx;
  color: #86868b;
  white-space: nowrap;
}

.content-preview {
  font-size: 28rpx;
  color: #515154;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 右侧操作 - 调整间距 */
.item-actions {
  margin-left: 10rpx; /* 减少左侧间距 */
  display: flex;
  align-items: center;
  flex-shrink: 0; /* 防止按钮被压缩 */
}

.delete-btn {
  background: transparent;
  border: 1rpx solid #ff3b30;
  border-radius: 12rpx;
  padding: 12rpx 20rpx;
  margin: 0;
  line-height: 1;
  min-width: 80rpx; /* 设置最小宽度 */
}

.delete-btn::after {
  border: none;
}

.delete-text {
  font-size: 24rpx;
  color: #ff3b30;
  font-weight: 500;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .header {
    padding: 50rpx 30rpx 25rpx;
  }
  
  .history-item {
    padding: 28rpx 24rpx; /* 调整小屏幕下的内边距 */
  }
  
  .item-left {
    margin-right: 20rpx;
  }
  
  .type-icon {
    width: 56rpx;
    height: 56rpx;
  }
  
  .item-content {
    margin-right: 15rpx; /* 小屏幕下减少间距 */
  }
  
  .item-actions {
    margin-left: 8rpx;
  }
  
  .delete-btn {
    padding: 10rpx 16rpx;
    min-width: 70rpx;
  }
}