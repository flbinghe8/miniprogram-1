/* pages/profile/profile.wxss - 完整修复版 */

/* --- 页面背景和布局 --- */
.container {
  padding: 30rpx 40rpx; 
  background-color: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}

/* --- 头部区域样式 (用户卡片) --- */
.profile-header {
  background: linear-gradient(135deg, #5A45FF, #7B68EE); 
  border-radius: 20rpx;
  padding: 40rpx;
  color: #fff;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(90, 69, 255, 0.3); 
}

/* 用户信息（头像和昵称） */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

/* 头像添加点击效果 */
.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 50rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
  transition: all 0.15s ease;
}

.avatar-placeholder:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
}

/* 额度卡片样式 */
.membership-card.credit-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: rgba(255, 255, 255, 0.15); 
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 0;
  box-shadow: none;
}

.status-section {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.status-title.card-title {
  font-size: 26rpx;
  opacity: 0.8;
  color: #fff;
  font-weight: normal;
}

.status-value.credit-count {
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 8rpx;
}

.package-info {
  font-size: 22rpx;
  opacity: 0.8;
  color: rgba(255, 255, 255, 0.9);
}

.upgrade-btn {
  background-color: #fff;
  color: #5A45FF;
  font-size: 24rpx;
  padding: 0 20rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 10rpx;
  margin: 0;
  flex-shrink: 0;
  border: none;
}

.upgrade-btn:active {
  opacity: 0.8;
  transform: scale(0.95);
}

/* --- 菜单列表样式 --- */
.menu-list {
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  position: relative;
  background-color: #fff; 
  transition: background-color 0.1s;
}

.menu-item:not(:last-child)::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  height: 1rpx;
  background-color: #f0f0f0;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.menu-arrow {
  font-size: 30rpx;
  color: #ccc;
  font-weight: bold;
  margin-left: 20rpx;
}

.menu-item:active {
  background-color: #f5f5f5;
}

/* --- 版本信息 --- */
.app-version {
  text-align: center;
  font-size: 24rpx;
  color: #b0b0b0;
  margin-top: 60rpx;
  padding-bottom: 20rpx;
}

/* --- 登录区域样式 --- */
.login-section {
  padding: 60rpx 40rpx;
  text-align: center;
}

.login-card {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.login-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.login-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.login-button {
  background: #07C160;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
}

/* 额度明细弹窗样式 */
.quota-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}

.popup-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.popup-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 80vh;
  overflow-y: auto;
  padding: 40rpx;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
}

.popup-close {
  font-size: 48rpx;
  color: #999;
}

/* 额度卡片 */
.quota-card {
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
}

.quota-main {
  margin-bottom: 20rpx;
}

.quota-count {
  font-size: 80rpx;
  font-weight: bold;
}

.quota-unit {
  font-size: 36rpx;
  margin-left: 10rpx;
}

.quota-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 额度详情 */
.quota-details {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  color: #666;
  font-size: 28rpx;
}

.detail-value {
  font-size: 28rpx;
  font-weight: 500;
}

.detail-value.member {
  color: #07c160;
}

/* 使用记录 */
.recent-records {
  margin-bottom: 30rpx;
}

.records-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-action {
  color: #333;
  font-size: 28rpx;
}

.record-date {
  color: #999;
  font-size: 24rpx;
}

.empty-records {
  text-align: center;
  color: #999;
  padding: 60rpx 0;
  font-size: 28rpx;
}