/* pages/profile/profile.wxss - 我的页面样式 */

/* --- 页面背景和布局 --- */
.container {
  /* 注意：这里的 padding 30rpx 40rpx 可能会导致顶部状态栏下方的空白，
     如果出现空白，可以将 padding-top 设置为 0 或 10rpx */
  padding: 30rpx 40rpx; 
  background-color: #f8f8f8; /* 浅灰色背景，简洁干净 */
  min-height: 100vh;
  box-sizing: border-box;
}

/* --- 头部区域样式 (用户卡片) --- */
.profile-header {
  /* 主题渐变色 */
  background: linear-gradient(135deg, #5A45FF, #7B68EE); 
  border-radius: 20rpx;
  padding: 40rpx;
  color: #fff;
  margin-bottom: 40rpx;
  /* 深度阴影，提升质感 */
  box-shadow: 0 10rpx 30rpx rgba(90, 69, 255, 0.3); 
}

/* 用户信息（头像和昵称） */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 50rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
}

/* 会员/额度卡片 */
.membership-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* 半透明背景 */
  background-color: rgba(255, 255, 255, 0.15); 
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
}

.status-title {
  font-size: 26rpx;
  opacity: 0.8;
}

.status-value {
  font-size: 30rpx;
  font-weight: 600;
  margin-left: 10rpx;
  /* 占据中心位置，将按钮推向右侧 */
  flex-grow: 1; 
}

.upgrade-btn {
  /* 样式重置，确保在小程序中渲染正确 */
  background-color: #fff;
  color: #5A45FF;
  font-size: 24rpx;
  padding: 0 20rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 10rpx;
  margin: 0;
  flex-shrink: 0;
}

/* --- 菜单列表样式 --- */
.menu-list {
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  overflow: hidden; /* 裁剪内嵌的边框/分割线 */
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  position: relative;
  background-color: #fff; 
  transition: background-color 0.1s;
}

/* 菜单项之间的分割线 */
.menu-item:not(:last-child)::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  height: 1rpx;
  background-color: #f0f0f0;
}

/* 菜单文字 */
.menu-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

/* 箭头 */
.menu-arrow {
  font-size: 30rpx;
  color: #ccc;
  font-weight: bold;
  margin-left: 20rpx;
}

/* 联系客服按钮样式重置 */
.contact-btn {
  background-color: transparent;
  border: none;
  line-height: normal; 
  padding: 30rpx 40rpx;
  margin: 0; 
}

/* 按钮点击反馈 */
.menu-item:active {
  background-color: #f5f5f5;
}

/* --- 版本信息 --- */
.app-version {
  text-align: center;
  font-size: 24rpx;
  color: #b0b0b0;
  margin-top: 60rpx;
  padding-bottom: 20rpx;
}
/* 在 profile.wxss 末尾添加 */
.status-section {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.package-info {
  font-size: 22rpx;
  opacity: 0.8;
  margin-top: 8rpx;
}